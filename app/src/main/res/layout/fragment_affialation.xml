<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    tools:context=".affialation.Affialation">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headers"
            android:layout_width="match_parent"
           android:text="AFFIALATION"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:padding="3dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lAffilationfrom"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:text="Afiialation From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingLeft="4dp"
                    android:id="@+id/uAffialtionFrom"
                    android:hint="Choose "
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lAffilationto"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:text="Afiialation To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingLeft="4dp"
                    android:id="@+id/uAffialationTo"
                    android:hint="Choose "
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lcaste"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:text="Caste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey"
                    />

                <Spinner
                    android:paddingLeft="4dp"
                    android:inputType="number"
                    android:background="@null"
                    android:hint="Enter"
                    android:id="@+id/uCaste"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lMobile"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:text="Mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey"
                    />

                <EditText
                    android:paddingLeft="4dp"
                    android:inputType="number"
                    android:background="@null"
                    android:hint="Enter"
                    android:id="@+id/uMobile"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/leducation"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:text="Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey"
                    />

                <Spinner
                    android:paddingLeft="4dp"
                    android:background="@null"
                    android:hint="Enter"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:id="@+id/uEducation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lAddress"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/grey"
                    />

                <EditText
                    android:paddingLeft="4dp"
                    android:background="@null"
                    android:hint="Enter"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:id="@+id/uAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/grey"
            />

        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/updateAffi"
                android:layout_width="140dp"
               app:cardBackgroundColor="@color/red_pressed"
                android:layout_gravity="center"
                app:cardCornerRadius="3dp"
                android:layout_height="33dp">

                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>